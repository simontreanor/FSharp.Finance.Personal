<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <IsPackable>false</IsPackable>
    <IsTestProject>true</IsTestProject>
  </PropertyGroup>
  <ItemGroup>
    <ProjectReference Include="..\src\FSharp.Finance.Personal.fsproj" />
  </ItemGroup>
  <ItemGroup>
    
    <Compile Include="Util.fs" />
    <Compile Include="ActualPaymentTests.fs" />
    <Compile Include="ActualPaymentTestsExtra.fs" />
    <Compile Include="AprEuropeanUnionTests.fs" />
    <Compile Include="AprUnitedKingdomTests.fs" />
    <Compile Include="AprUsActuarialTests.fs" />
    <Compile Include="AprUsActuarialTestsExtra.fs" />
    <Compile Include="ComplianceTests.fs" />
    <Compile Include="EdgeCaseTests.fs" />
    <Compile Include="FeesAndChargesTests.fs" />
    <Compile Include="IllustrativeTests.fs" />
    <Compile Include="InterestFirstTests.fs" />
    <Compile Include="InterestTests.fs" />
    <Compile Include="PaymentScheduleTests.fs" />
    <Compile Include="PromotionalRatesTests.fs" />
    <Compile Include="QuoteTests.fs" />
    <Compile Include="SettlementTests.fs" />
    <!-- <Compile Include="UnitPeriodConfigTests.fs" /> -->
  </ItemGroup>
  <ItemGroup>
    <PackageReference Update="FSharp.Core" Version="9.0.201" />
    <PackageReference Include="FsUnit" Version="5.5.0" />
    <PackageReference Include="FsUnit.Xunit" Version="5.5.0" />
    <PackageReference Include="Microsoft.NET.Test.Sdk" Version="17.7.1" />
    <PackageReference Include="xunit" Version="2.5.3" />
    <PackageReference Include="xunit.runner.visualstudio" Version="2.5.3">
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
  </ItemGroup>
  <Target Name="GenerateTimestampFile" BeforeTargets="VSTest">
    <ItemGroup>
      <SourceProject Include="@(ProjectReference)" Condition="'%(Filename)%(Extension)' == 'FSharp.Finance.Personal.fsproj'" />
    </ItemGroup>
    <MSBuild Projects="@(SourceProject)" Targets="GetLibraryVersion">
      <Output TaskParameter="TargetOutputs" ItemName="SourceProjectOutput" />
    </MSBuild>
    <PropertyGroup>
      <LibraryVersion>@(SourceProjectOutput)</LibraryVersion>
      <Timestamp>$([System.DateTimeOffset]::Now.ToString("yyyy-MM-dd HH:mm:ss zzzz"))</Timestamp>
      <HtmlContent>&lt;html&gt;&lt;body&gt;&lt;p&gt;Generated: &lt;i&gt;$(Timestamp)&lt;/i&gt; using library version: &lt;i&gt;$(LibraryVersion)&lt;/i&gt;&lt;/p&gt;&lt;/body&gt;&lt;/html&gt;</HtmlContent>
    </PropertyGroup>
    <WriteLinesToFile File="$(MSBuildProjectDirectory)\..\io\out\GeneratedDate.html" Lines="$(HtmlContent)" Overwrite="true" />
  </Target>
</Project>